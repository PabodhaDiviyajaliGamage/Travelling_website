{
  "version": 2,
  "buildCommand": "cd frontend && npm install && chmod +x ./node_modules/.bin/vite && npm run build",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "Backend/Server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/Server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}